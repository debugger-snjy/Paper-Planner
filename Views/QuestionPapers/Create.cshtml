@model PaperPlanner_Application.Models.QuestionPaper

@{
    ViewBag.Title = "Create";
}

@Html.Partial("_AlertMessages")

<h2>Create Question Paper</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-4">
            @Html.LabelFor(model => model.qpTitle, htmlAttributes: new { @class = "control-label form-label" })
            <span class="fw-bolder text-danger">*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.qpTitle, new { htmlAttributes = new { @class = "form-control", @minLength = 5, @maxLength = 40 } })
                @Html.ValidationMessageFor(model => model.qpTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-4">
            @Html.LabelFor(model => model.qpDescription, htmlAttributes: new { @class = "control-label form-label" })
            <span class="fw-bolder text-danger">*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.qpDescription, new { htmlAttributes = new { @class = "form-control", @minLength = 5, @maxLength = 80 } })
                @Html.ValidationMessageFor(model => model.qpDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-4">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Back to Questions Papers List", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}

@Html.Partial("_AlertScript")